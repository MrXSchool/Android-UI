<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_margin="15dp"
    android:padding="60dp"
    android:background="@mipmap/bg_dl_new1">

    <TextView
        android:id="@+id/txtTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="content here"
        android:textSize="30sp"
        android:layout_gravity="center"
        android:textColor="#fff"
        android:textStyle="bold"/>
    <EditText
        android:id="@+id/edtName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nhập khoản"
        android:textColor="#FFFFFF"
        android:textColorHint="#F6E2E2"/>
    <EditText
        android:id="@+id/edtPrice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nhập tiền"
        android:textColor="#FFFFFF"
        android:textColorHint="#F6E2E2"/>
    <EditText
        android:id="@+id/edtDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="dd/MM/yyy"
        android:focusable="false"
        android:clickable="true"
        android:inputType="none"
        android:textColor="#FFFFFF"
        android:textColorHint="#F6E2E2"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#F6E2E2"
        android:text="Loại của khoản"
        android:textSize="20sp"/>
    <Spinner
        android:id="@+id/spnCate"
        android:layout_width="match_parent"

        android:background="#FFFFFF"
        android:layout_height="wrap_content"

        />
    <Button
        android:id="@+id/btnSave"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="save"
        android:backgroundTint="#2BB6F4"/>
    <Button
        android:id="@+id/btnCanccel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="cancel"
        android:backgroundTint="#23DD2A"/>

</LinearLayout>